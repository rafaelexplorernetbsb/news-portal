# ========================================
# CONFIGURAÇÃO DE AMBIENTE - EXEMPLO
# ========================================
# Copie este arquivo para .env.local e ajuste as variáveis

# ========================================
# DIRETUS API
# ========================================
DIRECTUS_URL=http://localhost:8055
DIRECTUS_TOKEN=seu_token_aqui
DIRECTUS_DB_CLIENT=pg
DIRECTUS_DB_HOST=localhost
DIRECTUS_DB_PORT=5432
DIRECTUS_DB_DATABASE=directus
DIRECTUS_DB_USER=directus
DIRECTUS_DB_PASSWORD=sua_senha_aqui

# ========================================
# FRONTEND (NEXT.JS)
# ========================================
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055
NEXT_PUBLIC_API_TOKEN=seu_token_aqui
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Portal de Notícias"

# ========================================
# WEBSCRAPER SERVICE
# ========================================
WEBSCRAPER_DIRECTUS_URL=http://localhost:8055
WEBSCRAPER_DIRECTUS_TOKEN=seu_token_aqui
WEBSCRAPER_INTERVAL_MINUTES=5
WEBSCRAPER_MAX_ARTICLES=10

# ========================================
# REDIS (OPCIONAL)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# STORAGE (OPCIONAL)
# ========================================
STORAGE_LOCATIONS=local
STORAGE_LOCAL_ROOT=./uploads
STORAGE_LOCAL_PUBLIC_URL=/uploads

# ========================================
# SEGURANÇA
# ========================================
KEY=seu_secret_key_aqui
SECRET=seu_secret_aqui
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
REFERRER_POLICY=strict-origin-when-cross-origin

# ========================================
# CORS
# ========================================
CORS_ENABLED=true
CORS_ORIGIN=true

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_STYLE=pretty
