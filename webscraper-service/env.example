# ========================================
# CONFIGURAÇÃO DO WEBSCRAPER SERVICE
# ========================================

# ========================================
# DIRETUS API
# ========================================
DIRECTUS_URL=http://localhost:8055
DIRECTUS_TOKEN=seu_token_aqui

# ========================================
# CONFIGURAÇÕES DOS WEBSCRAPERS
# ========================================
WEBSCRAPER_INTERVAL_MINUTES=5
WEBSCRAPER_MAX_ARTICLES=10
WEBSCRAPER_TIMEOUT_MS=30000

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS POR PORTAL
# ========================================
G1_ENABLED=true
G1_INTERVAL_MINUTES=5
G1_MAX_ARTICLES=5

FOLHA_ENABLED=true
FOLHA_INTERVAL_MINUTES=5
FOLHA_MAX_ARTICLES=5

UOL_ENABLED=false
UOL_INTERVAL_MINUTES=5
UOL_MAX_ARTICLES=5

OLHAR_DIGITAL_ENABLED=true
OLHAR_DIGITAL_INTERVAL_MINUTES=5
OLHAR_DIGITAL_MAX_ARTICLES=5

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./webscraper.log

# ========================================
# USER AGENT
# ========================================
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
