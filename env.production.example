# ========================================
# CONFIGURAÇÃO DE PRODUÇÃO - EXEMPLO
# ========================================
# Configure estas variáveis no seu servidor de produção

# ========================================
# DIRETUS API (PRODUÇÃO)
# ========================================
DIRECTUS_URL=https://seu-dominio.com/api
DIRECTUS_TOKEN=seu_token_producao_aqui
DIRECTUS_DB_CLIENT=pg
DIRECTUS_DB_HOST=seu_servidor_db.com
DIRECTUS_DB_PORT=5432
DIRECTUS_DB_DATABASE=directus_prod
DIRECTUS_DB_USER=directus_user
DIRECTUS_DB_PASSWORD=sua_senha_producao_aqui

# ========================================
# FRONTEND (NEXT.JS) - PRODUÇÃO
# ========================================
NEXT_PUBLIC_DIRECTUS_URL=https://seu-dominio.com/api
NEXT_PUBLIC_API_TOKEN=seu_token_producao_aqui
NEXT_PUBLIC_SITE_URL=https://seu-portal.com
NEXT_PUBLIC_SITE_NAME="Portal de Notícias"

# ========================================
# WEBSCRAPER SERVICE - PRODUÇÃO
# ========================================
WEBSCRAPER_DIRECTUS_URL=https://seu-dominio.com/api
WEBSCRAPER_DIRECTUS_TOKEN=seu_token_producao_aqui
WEBSCRAPER_INTERVAL_MINUTES=5
WEBSCRAPER_MAX_ARTICLES=20

# ========================================
# REDIS (PRODUÇÃO)
# ========================================
REDIS_HOST=seu_redis_host.com
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_redis_aqui

# ========================================
# STORAGE (PRODUÇÃO)
# ========================================
STORAGE_LOCATIONS=s3
STORAGE_S3_DRIVER=s3
STORAGE_S3_KEY=seu_aws_access_key
STORAGE_S3_SECRET=seu_aws_secret_key
STORAGE_S3_BUCKET=seu_bucket_name
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ENDPOINT=

# ========================================
# SEGURANÇA (PRODUÇÃO)
# ========================================
KEY=seu_secret_key_producao_muito_seguro
SECRET=seu_secret_producao_muito_seguro
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
REFERRER_POLICY=strict-origin-when-cross-origin

# ========================================
# CORS (PRODUÇÃO)
# ========================================
CORS_ENABLED=true
CORS_ORIGIN=https://seu-portal.com

# ========================================
# LOGGING (PRODUÇÃO)
# ========================================
LOG_LEVEL=warn
LOG_STYLE=json

# ========================================
# MONITORAMENTO (OPCIONAL)
# ========================================
SENTRY_DSN=sua_sentry_dsn_aqui
HEALTH_CHECK=true
