{
  "name": "news-portal",
  "version": "1.0.0",
  "description": "Portal de Notícias com Directus CMS e Next.js",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../webscraper-service && pnpm install",
    "dev": "concurrently \"pnpm dev:directus\" \"pnpm dev:frontend\" \"pnpm dev:webscraper\"",
    "dev:directus": "cd api && pnpm dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:webscraper": "cd webscraper-service && pnpm start",
    "build": "cd frontend && pnpm build",
    "start": "cd frontend && pnpm start",
    "setup": "pnpm install:all && echo '✅ Instalação concluída! Execute: pnpm dev'",
    "clean": "rm -rf node_modules frontend/node_modules webscraper-service/node_modules",
    "reset": "pnpm clean && pnpm install:all",
    "sync-env": "./sync-env.sh"
  },
  "devDependencies": {
    "concurrently": "catalog:"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "node-fetch": "catalog:"
  }
}
