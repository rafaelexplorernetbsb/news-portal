# Configuração Nginx para isolar cookies do Directus
# Frontend: https://seusite.com
# Admin: https://seusite.com/admin

server {
    listen 443 ssl http2;
    server_name seusite.com;

    # Certificados SSL
    ssl_certificate /path/to/ssl/cert.pem;
    ssl_certificate_key /path/to/ssl/key.pem;

    # Configurações SSL recomendadas
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Logs
    access_log /var/log/nginx/seusite_access.log;
    error_log /var/log/nginx/seusite_error.log;

    # ==============================================================
    # FRONTEND (Next.js) - https://seusite.com
    # ==============================================================
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Headers para proxy
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (para HMR e push notifications)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # IMPORTANTE: Remover cookies do Directus das requisições do frontend
        proxy_set_header Cookie "";
        
        # Adicionar apenas cookies que NÃO são do Directus
        set $filtered_cookie "";
        if ($http_cookie ~* "(.*)directus_session_token=[^;]+(.*)" ) {
            set $filtered_cookie $1$2;
        }
        if ($http_cookie ~* "(.*)directus_refresh_token=[^;]+(.*)" ) {
            set $filtered_cookie $1$2;
        }
        if ($filtered_cookie != "") {
            proxy_set_header Cookie $filtered_cookie;
        }
    }

    # ==============================================================
    # DIRECTUS ADMIN - https://seusite.com/admin
    # ==============================================================
    location /admin {
        # Remover /admin do path antes de enviar ao Directus
        rewrite ^/admin(/.*)$ $1 break;
        rewrite ^/admin$ / break;
        
        proxy_pass http://localhost:8055;
        proxy_http_version 1.1;
        
        # Headers para proxy
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts maiores para uploads
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        client_max_body_size 100M;

        # CRÍTICO: Reescrever cookies do Directus para incluir Path=/admin
        proxy_cookie_path / /admin;
        
        # Adicionar flags de segurança aos cookies
        proxy_cookie_flags ~ secure httponly samesite=lax;
    }

    # Assets do Directus
    location /admin/assets {
        rewrite ^/admin/assets(/.*)$ /assets$1 break;
        proxy_pass http://localhost:8055;
        
        # Headers básicos
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Redirect HTTP para HTTPS
server {
    listen 80;
    server_name seusite.com;
    return 301 https://$server_name$request_uri;
}

